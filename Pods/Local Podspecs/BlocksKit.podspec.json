{
  "name": "BlocksKit",
  "version": "2.1.0",
  "license": "MIT",
  "summary": "The Objective-C block utilities you always wish you had.",
  "homepage": "https://github.com/pandamonia/BlocksKit",
  "authors": {
    "Zachary Waldowski": "zwaldowski@gmail.com",
    "Alexsander Akers": "a2@pandamonia.us"
  },
  "source": {
    "git": "https://github.com/pandamonia/BlocksKit.git",
    "tag": "v2.1.0"
  },
  "requires_arc": true,
  "platforms": {
    "osx": "10.7",
    "ios": "5.0"
  },
  "default_subspecs": "All",
  "subspecs": [
    {
      "name": "All",
      "dependencies": {
        "BlocksKit/Core": [

        ],
        "BlocksKit/DynamicDelegate": [

        ]
      },
      "ios": {
        "dependencies": {
          "BlocksKit/MessageUI": [

          ],
          "BlocksKit/UIKit": [

          ]
        }
      }
    },
    {
      "name": "Core",
      "source_files": [
        "BlocksKit/BlocksKit.h",
        "BlocksKit/Core/*.{h,m}"
      ]
    },
    {
      "name": "MiniFFI",
      "source_files": [
        "ffi-mini/include/*.h",
        "ffi-mini/src/*.c",
        "ffi-mini/src/aarch64/*.{c,S}",
        "ffi-mini/src/arm/*.{c,S}",
        "ffi-mini/src/x86/*.{c,S}"
      ],
      "xcconfig": {
        "OTHER_LDFLAGS": "-Wl,-no_compact_unwind"
      }
    },
    {
      "name": "DynamicDelegate",
      "source_files": [
        "BlocksKit/BlocksKit.h",
        "BlocksKit/Dynamic Delegate/*.{h,m}",
        "BlocksKit/Dynamic Delegate/Foundation/*.{h,m}"
      ],
      "ios": {
        "dependencies": {
          "BlocksKit/MiniFFI": [

          ]
        }
      },
      "osx": {
        "libraries": "ffi"
      }
    },
    {
      "name": "MessageUI",
      "dependencies": {
        "BlocksKit/DynamicDelegate": [

        ]
      },
      "platforms": {
        "ios": null
      },
      "source_files": [
        "BlocksKit/BlocksKit+MessageUI.h",
        "BlocksKit/MessageUI/*.{h,m}"
      ],
      "ios": {
        "frameworks": "MessageUI"
      }
    },
    {
      "name": "UIKit",
      "dependencies": {
        "BlocksKit/DynamicDelegate": [

        ]
      },
      "platforms": {
        "ios": null
      },
      "source_files": [
        "BlocksKit/BlocksKit+UIKit.h",
        "BlocksKit/UIKit/*.{h,m}"
      ]
    }
  ]
}
